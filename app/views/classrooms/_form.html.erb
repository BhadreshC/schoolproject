<%= form_with(model: [@school, classroom], local: true) do |form| %>
	<% if classroom.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(classroom.errors.count, "error") %> prohibited this classroom from being saved:</h2>
			<ul>
				<% classroom.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= form.label :C_Name %>
		<%= form.text_field :C_Name, required: true %>
	</div>

	<div class="field">
		<%= form.label :standard %>
		<%= form.number_field :standard, required: true, within: 1..12 %>
	</div>

	<div class="actions">
		<%= form.submit %>
	</div>
<% end %>
