<h1 align="center"> WELCOME TO <%= %> DASHBOARD OF SCHOOL</h1>
<div class="row">
	<div class="column" style="background-color:#aaa;">
		<h4 align="center">
			NO OF TEACHERS<br><%= %><br>
		</h4>
		<%= link_to "Teacher List", school_teachers_path(@school) %>
	</div>

	<div class="column" style="background-color:#bbb;">
		<h4 align="center">
			NO OF STUDENTS<br><%=  %><br>
		</h4>
		<%= link_to "Student List", school_students_path(@school)%>

	</div>

	<div class="column" style="background-color:#ccc;">
		<h4>
			NO OF CLASS<br><%= @classroomscount.count %><br>
		</h4>
		<%= link_to "Class List", school_classrooms_path(@school)%>
	</div>
</div>
<br>
<div class="princedetail">
	<h1>PRINCIPLE HISTORY</h1><br>
	<table align="center">
		<thead>
			<tr>
				<th>Username</th>
				<th>Email</th>
				<th>Date</th>
				<th>status</th>
			</tr>
		</thead>
		<tbody>
			<% @principles.each do |principle| %>
				<tr>
					<td><%= principle.username %></td>
					<td><%= principle.email %></td>
					<td><%= principle.created_at %></td>
					<% if @record.username != principle.username %>
						<td>Disable</td>
					<% else %>
						<td>( Current )</td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
