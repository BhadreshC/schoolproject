<%= form_with(model: [@school, teacher], local: true) do |form| %>
	<% if teacher.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>
			<ul>
				<% teacher.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= form.label :name %>
		<%= form.text_field :name, required: true, :placeholder => "Your name"%>
	</div>

	<div class="field">
		<%= form.label :email %>
		<%= form.text_field :email, required: true, :placeholder => "Enter Email" %>
	</div>

	<div class="field">
		<%= form.label :Mobile_No %>
		<%= form.text_field :Mobile_No, required: true, :placeholder => "Your phone number"%>
	</div>

	<div class="field">	
		<%= form.label :qualification %>
		<%= form.text_field :qualification, required: true, :placeholder => "Enter Your qualification"%>
	</div>

	<div class="field">
		<%= form.label :classroom_id %>
		<%= form.collection_select :classroom_id, @schoolclassrooms.order(:C_Name),:id, :C_Name, {:prompt => "--select classroom--"}, required: true%>
	</div>

	<div class="field">
		<%= form.label :gender %> <br>
		<%= form.label :gender, "Male"%>
		<%= form.radio_button :gender, :Male%>
		<%= form.label :gender, "Female" %>
		<%= form.radio_button :gender, :Female, checked: true %>
	</div>

	<div class="actions">
		<%= form.submit %>
	</div>
<% end %>
