<p>
	<strong>Name:</strong>
	<%= @teacher.name %>
</p>

<p>
	<strong>Email:</strong>
	<%= @teacher.email %>
</p>

<p>
	<strong>No of student:</strong>
	<%= @teacher.students.count %>
</p>

<p>
	<strong>Moible No:</strong>
	<%= @teacher.MobileNo %>
</p>

<p>
	<strong>Qualification: </strong>
	<%= @teacher.qualification %>
</p>

<p>
	<strong>Gender:</strong>
	<%= @teacher.gender %>
</p>

<p>
	<strong>classroom:</strong>
	<%= link_to "#{@teacher.classroom.C_Name}", school_classroom_path(@school, @teacher.classroom) %>
</p>

<%= link_to 'Edit', edit_school_teacher_path(@school, @teacher) %>|||
<%= link_to 'Back', school_teachers_path(@school) %>

<table align="center">
	<marquee scrollamount="15"><h2>Teacher activities</h2></marquee>
	<thead>
		<tr>
			<th>Date</th>
			<th>activity</th>
		</tr>
	</thead>
	<tbody>
		<% @teacher_activities.each do |activity| %>
			<tr>
				<td><%= activity.created_at.strftime("%d %B %Y %R") %></td>
				<td><%= activity.name %></td>
			</tr>
		<% end %>
	</tbody>
</table>
