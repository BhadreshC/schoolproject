<p id="notice"><%= notice %></p>
<h1 align="center">Teachers</h1>
<table align="center">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>No. of Student</th>
			<th colspan="3">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @teachers.each do |teacher| %>
			<tr>
				<td><%= teacher.name %></td>
				<td><%= teacher.email %></td>
				<td></td>
				<td><%= link_to 'Show', school_teacher_path(@school, teacher) %></td>
				<td><%= link_to 'Edit', edit_school_teacher_path(@school, teacher) %></td>
				<td><%= link_to 'Destroy', school_teacher_path(@school, teacher), method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<h2 align="center"> 
	<%= link_to "Back", school_path(@school) %>
</h2>
